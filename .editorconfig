root = true

[*]
charset = utf-8
insert_final_newline = true
end_of_line = lf
indent_style = space
indent_size = 4
tab_width = 4
max_line_length = 120
ij_continuation_indent_size = 4
ij_formatter_off_tag = @formatter:off
ij_formatter_on_tag = @formatter:on
ij_formatter_tags_enabled = true
ij_smart_tabs = false
ij_visual_guides = 80
ij_wrap_on_typing = false
ij_html_enforce_quotes = true
ij_html_quote_style = double

[*.css]
indent_size = 2
tab_width = 2

[{*.cjs,*.js}]
indent_size = 2
ij_javascript_use_double_quotes = false
tab_width = 2

[{*.blade.php,*.tpl}]
indent_size = 2
ij_html_quote_style = double
tab_width = 2

[{*.ctp,*.hphp,*.inc,*.module,*.php,*.php4,*.php5,*.phtml,db}]
indent_size = 4
ij_html_quote_style = double
tab_width = 4
ij_continuation_indent_size = 4

[{*.har,*.jsb2,*.jsb3,*.json,.babelrc,.eslintrc,.prettierrc,.stylelintrc,bowerrc}]
indent_size = 2
indent_style = space
tab_width = 4

[{*.htm,*.html,*.ng,*.sht,*.shtm,*.shtml}]
indent_size = 2
tab_width = 2

[*.xml]
insert_final_newline = false

[{*.markdown,*.md}]
indent_size = 3
tab_width = 3
ij_continuation_indent_size = 6
ij_visual_guides = 120